skin-islands-tabs()
  margin: 0 -0.5*$islands_m

  if nowrap in arguments
    white-space: nowrap

  if adaptive in arguments
    font-size: 1em
  else if small in arguments
    font-size: $islands_text_s
  else
    font-size: $islands_text_m

skin-islands-tabs-item()
  skin-islands-link(arguments)
  line-height: 2em
  padding: 0.3*rem 0.5*$islands_m

skin-islands-tabs-item_selected()
  skin-islands-link_selected(arguments)

  unless no-elements in arguments
    &:before
      content: ""
      skin-islands-tabs-item_selected-helper(arguments)

skin-islands-tabs-item_selected-helper()
  kind: fill top -1px 0.5*$islands_m

  border-top: 2px solid
