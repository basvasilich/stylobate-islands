skin-islands-group()
  kind: group

skin-islands-group-start()
  kind: group-start '&,&:before'

  &:before
    right: 0

skin-islands-group-middle()
  kind: group-middle '&,&:before'

  &:before
    right: 0

skin-islands-group-end()
  kind: group-end '&,&:before'

skin-islands-group-item()
  &:first-child
    skin-islands-group-start()

  &:not(:first-child):not(:last-child)
    skin-islands-group-middle()

  &:last-child
    skin-islands-group-end()

skin-islands-nested-group-item()
  $nested-group-item = alike(arguments, '.toggler-view')
  kind: group-item ('& > ' + $nested-group-item + ', & > ' + $nested-group-item + ':before')

  &:not(:last-child) > {$nested-group-item}:before
    right: 0
