@import "stylobate"
@import "_skins/islands/isle"
@import "_skins/islands/link"

// Variables

gap_xs = 6px
gap_s = 10px
gap_m = 16px
gap_l = 20px


// Move to page kind?
.page
  padding: 0
  margin: 0

  font: 15px/22px Arial, sans-serif

  background: #E8E7E4

.page-body
  padding: 0
  margin: 0

  background: transparent

h1,h2
  padding: 0
  margin: 0

  font-weight: normal


.header,
.site-nav
  kind: block
  skin: isle

.header
  z-index: 2 // So it would be highter than `.site-nav`
  padding: (gap_m - 2px) gap_l

.header-logo,
.header-service
  kind: block inline

.site-nav
  padding: 0 (gap_l - 0.5*gap_m)
  // It would be nice to make nav/nav-item skin/pattern with padding here and there


.site-nav-link
  kind: block inline
  skin: link hover nou

  padding: gap_s 0.5*gap_m

a.site-nav-link:not([href])
  skin: link_selected

  &:before
    content: ""
    kind: fill top 0 0.5*gap_m

    border-top: 2px solid
