// Proto for simple buttons
skin-islands-pseudo-button()
  position: relative

  color: #333

  border-radius: 3px
  box-shadow: inset 0 0 0 1px rgba(#000, 0.2)

  if small in arguments
    skin-islands-para2(no-margin)
    padding: (gap_xs - 0.3*rem) gap_s
  else
    skin-islands-para(no-margin)
    padding: (gap_xs - 0.3*rem) (gap_s + 0.1*rem)

  &:not(.is-disabled):hover
    box-shadow: inset 0 0 0 1px rgba(#000, 0.35)

  &:not(.is-disabled):focus
    outline: 0
    box-shadow: inset 0 0 0 1px rgba(#000, 0.35)

    &:after
      content: ""
      kind: fill
      z-index: 9 // So it would be over other elements nearby
      box-shadow: 0 0 6px 2px rgba(255,204,0, 0.7), inset 0 0 0 1px rgba(193,154,0, 0.2);
      border-radius: inherit
