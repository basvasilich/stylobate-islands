skin-link()
  cursor: pointer

  if outer in arguments
    color: #070
  else
    color: alike(arguments, #22C)

  unless no-hover in arguments
    &:hover
      skin-link_hover()

  if underline in arguments
    text-decoration: underline
  else
    text-decoration: none

  if pseudo in arguments
    text-decoration: none
    border-bottom: 1px dashed

skin-link_hover()
  color: #D00

skin-link_selected()
  color: #000
  cursor: default


