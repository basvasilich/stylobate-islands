// Proto for simple buttons
skin-proto-button()
  position: relative

  color: #333

  border-radius: 3px
  box-shadow: 0 1px 0 rgba(#000, 0.07)

  &:before
    content: ""
    kind: fill 1px
    border-radius: 2px

  if small in arguments
    skin-p2(no-margin)
    padding: (gap_xs - 0.1*rem) (gap_m - 0.3*rem)
  else
    skin-p(no-margin)
    padding: (gap_xs - 0.1*rem) (gap_m - 0.1*rem)

  & > .button-content
    kind: block

  &:active
    skin-button_pressed()

    & > .button-content
      top: 1px

// Normal button
skin-button()
  skin-proto-button(arguments)

  background: #EEE
  background: -webkit-linear-gradient(rgba(#000, 0.2), rgba(#000, 0.4))

  &:before
    background: #FFF
    background: -webkit-linear-gradient(#FFF, #EEE)


// Action button
skin-action-button()
  skin-proto-button(arguments)

  background: #FFDF60
  background: -webkit-linear-gradient(rgba(96,64,0, 0.4),rgba(70,47,0, 0.54))

  &:before
    background: #FFDF60
    background: linear-gradient(#FFDF60, #FFCC00)


// Pressed state
skin-button_pressed()
  box-shadow: inset 0 2px 1px -1px rgba(#000, 0.4), 0 1px 0 rgba(#FFF, 0.2)

  &:before
    box-shadow: inset 0 1px 3px -1px rgba(#000, 0.5)

