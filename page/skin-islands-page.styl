// Var for checking, fixing rem
$init_islands_root ?= false

skin-islands-page()
  reset('html') unless no-reset in arguments

  font-size: 62.5%
  color: $islands_color_text
  background: $islands_bg_page

skin-islands-page-font()
  font: $islands_text_m/2.2*rem Arial, sans-serif

skin-islands-check-font()
  unless $init_islands_root
    skin-islands-page-font()

skin-islands-page-body()
  reset('body') unless no-reset in arguments
  skin-islands-page-font()

  background: transparent

  unless $init_islands_root
    $init_islands_root[0] = true

// Init if the var is set
if $init_islands_root
  html
    skin-islands-page()

  body
    skin-islands-page-body()
