// Focused state
skin-islands-button_focus()
  outline: 0

  &:after
    z-index: 9 // So it would be over other elements nearby
    skin-islands-button_focus_style()

skin-islands-button_focus_style()
  box-shadow: $islands_shadow_focus, inset 0 0 0 1px rgba(193,154,0, 0.2);
  border-radius: inherit unless no-radius in arguments
