// Selected state
skin-islands-button_checked()
  background: rgba(255,236,166, 0.4)
  box-shadow: 0 1px 7px rgba(30,23,0,.8) inset, 0 2px 0 -1px rgba(255,255,255,.2)

  &:before
    gradient: #FFECA6, #FFF6D5
    box-shadow: 0 1px 3px -1px rgba(#000, 0.45) inset

  if fly in arguments
    top: 1px
  else
    & > {$skin-islands-button-content}
      top: 1px

