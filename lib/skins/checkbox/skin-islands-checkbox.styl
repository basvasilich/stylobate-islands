skin-islands-checkbox()
  if !ie
    skin-islands-button(no-active no-hover middle retrieve(arguments, sizeless, adaptive))

    text-align: center

  margin-right: $islands_xs

  unless no-modifiers or ie
    &_m
      width: $islands_m
      height: $islands_m
      padding: 0
    &_m
      width: $islands_m - 0.2*rem
      height: $islands_m - 0.2*rem
      padding: 0

  unless no-elements in arguments or utilus_get(arguments, '-icon') or ie
    & > &-icon
      skin-islands-checkbox-icon()

skin-islands-checkbox-icon()
  if !ie
    // Replace it with svg?
    // And icon kind?
    position: absolute
    top: 50%
    left: 50%

    width: 5px
    height: 13px
    border-bottom: 3px solid
    border-right: 3px solid
    margin: -13px 0 0 -2px

    color: #000

    transform: scale(0.9) rotate(50deg) skewX(12deg)

    // Find out if there is any way to make this easier?
    input:not(:checked) + &
      visibility: hidden
