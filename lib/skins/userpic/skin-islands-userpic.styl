skin-islands-userpic()
  border-radius: 50%
  background-size: cover
  box-shadow: inset 0 0 0 1px rgba(#000, 0.15)

  skin-islands-userpic_(arguments)

skin-islands-userpic_()
  if with-hover in arguments
    &:hover
      skin-islands-userpic_hover()

skin-islands-userpic_hover()
  box-shadow: inset 0 0 0 1px rgba(#000, 0.3)
