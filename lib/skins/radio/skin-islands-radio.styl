skin-islands-radio()
  skin-islands-button(no-active no-hover middle retrieve(arguments, sizeless, adaptive))

  text-align: center

  margin-right: $islands_xs

  border-radius: 50%

  &:before
    border-radius: 50%

  unless no-elements in arguments or utilus_get(arguments, '-icon')
    & > &-icon
      skin-islands-radio-icon()

skin-islands-radio-icon()
  // Replace it with svg?
  // And icon kind?
  position: absolute
  top: 50%
  left: 50%

  width: 6px
  height: 6px
  margin: -3px

  background: #000
  border-radius: 50%

  // Find out if there is any way to make this easier?
  input:not(:checked) + &
    visibility: hidden
