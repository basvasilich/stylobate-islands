unless check-stylobate-version is defined
  check-stylobate-version($version)
    error('Used Stylobate version is very outdated, update it to the `' + $version + '`.')

check-stylobate-version('0.17.x')

// Setting variables
$islands_xs ?= 0.6*rem
$islands_s  ?= 1.0*rem
$islands_m  ?= 1.6*rem
$islands_l  ?= 2.0*rem

$islands_text_m ?= 1.5*rem
$islands_text_s ?= 1.3*rem

$islands_bg_page ?= #F6F5F3
$islands_bg_main ?= #FFF

$islands_color_text ?= #333
$islands_color_text_misc ?= rgba-ie(#000, 0.5)

$islands_color_focus ?= rgba-ie(#FC0, 0.7)
$islands_color_error ?= rgba-ie(#F00, 0.7)

$islands_shadow_focus ?= 0 0 6px 2px $islands_color_focus
$islands_shadow_error ?= 0 0 0 2px $islands_color_error


