.aside
  skin: isle

  width: 300px
  float: left

.aside-nav
  overflow: auto
  overflow-x: hidden

.aside-nav-item
  kind: block

  cursor: pointer
  text-decoration: none
  color: #000

  padding: gap_xs gap_s
  padding-right: gap_s*2 + gap_xs

  box-shadow: 0 -1px 0 rgba(0,0,0,0.15)

  margin-top: 1px

  &:first-child
    margin-top: 0
    box-shadow: none

  &:hover
    background: #ECF4F9

  &.is-active
    color: #FFF
    background: #1981CA
    box-shadow: 0 -1px 0 rgba(0,0,0,.15),
                0 -1px 0 #1981CA,
                0 1px 0 #1981CA

.aside-nav-item:after
  content: 'â€º'

  position: absolute
  top: 0
  right: gap_s

  font-size: gap_l

  line-height: round(gap_l + 2*gap_xs,1)

