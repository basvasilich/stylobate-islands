.group
  kind: group

.group > .toggle-button
  kind: group-item '&,&:before'

.group > .radiobutton
  kind: group-item '& > .radiobutton-view, & > .radiobutton-view:before'

.group > .toggle-button:not(:last-child):before,
.group > .radiobutton:not(:last-child) > .radiobutton-view:before
  right: 0

