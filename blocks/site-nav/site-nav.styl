.site-nav
  kind: block
  skin: isle 0.15

  padding: 0 ($l - 0.5*$m)
  // It would be nice to make nav/nav-item skin/pattern with padding here and there


.site-nav-link,
.site-nav-outer-link
  kind: block inline
  skin: link

  padding: $s 0.5*$m

.site-nav-outer-link
  skin: outer-link
  float: right


a.site-nav-link:not([href])
  skin: link_selected

  &:before
    content: ""
    kind: fill top 0 0.5*$m

    border-top: 2px solid
