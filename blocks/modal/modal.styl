.modal-wrap
  kind: modal-wrap fixed

.modal
  kind: modal
  skin: isle fly

.modal-paranja
  kind: modal-paranja
  skin: paranja

// Could be a block like `content`, there are a lot of places for thing like that
.modal-content
  padding: $l

  // Mix with .text, removing the bottom padding
  &.text
    padding-bottom: 0

// Need to be abstracted to icon
.modal-close
  position: absolute
  top: 5px
  right: 5px

  width: 16px
  height: 16px

  cursor: pointer
  opacity: 0.2

  background: url("data:image/svg+xml;base64,")

  &:hover
    opacity: 1
