// Complex input
.field
  kind: field 0.5*$s $s
  skin: input-box

.small-field
  kind: field no-elements
  skin: input-box small

.input-controller
  kind: input
  z-index: 9
  width: 100%
  height: 100%

  textarea&
    vertical-align: top
    resize: none

.input-view
  kind: fill -1px
  skin: input-view no-focus

  .input-controller:not(.is-disabled):focus + &
    skin: input_focus

.field-label
  kind: field-left 0.5*$s $s
  skin: input-label

.field-reset
  kind: field-right 0.5*$s
  skin: icon remove with-hover
  margin-right: $s * -1
